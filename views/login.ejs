<%- include('./shared/header.ejs') %>

    <div class="container text-center my-5">
        <div class="user my-3">
            <i class="fas fa-user-secret user-icon"></i>
            <h4 class="login">Login</h4>
        </div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-5 p-5 rounded shadow">
                    <% if (error) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= error %>
                        </div>
                        <% } %>
                            <% if (success) { %>
                                <div class="alert alert-success" role="alert">
                                    <%= success %>
                                </div>
                                <% } %>
                                    <form method="POST" action="/handleLogin">
                                        <input class="form-control mb-2" placeholder="Enter your email" type="text"
                                            name="email">
                                        <input class="form-control mb-2" placeholder="Enter your Password"
                                            type="password" name="password">
                                        <button class="btn btn-default-outline mt-2 mb-2 w-100">Login</button>

                                        <p class="">Forgot<a class="text-primary forgot btn" href="/forget"> Password
                                            </a>?</p>
                                        <p>Don't have account? <a class="text-primary forgot btn" href="/register">Sign
                                                up</a>
                                        </p>
                                    </form>
                </div>
            </div>

        </div>
    </div>

    <%- include('./shared/footer.ejs') %>